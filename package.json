{
  "name": "task-tracker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "electron .",
    "build-electron": "npx prisma migrate deploy && npx prisma db seed && tsc -p electron && cp electron/src/preload.cjs dist-electron/ && node electron/build-simple.js",
    "dev-electron": "concurrently \"tsc -w -p electron\" \"cp electron/src/preload.cjs dist-electron/ -f\" \"cross-env NODE_ENV=development electron .\"",
    "electron": "npm run build-electron && electron .",
    "lint": "next lint",
    "package": "electron-forge package",
    "make": "npm run build-electron && electron-forge make",
    "seed": "node prisma/seed.cjs"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "public/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel"
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-deb"
        },
        {
          "name": "@electron-forge/maker-rpm"
        }
      ]
    }
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "electron-squirrel-startup": "^1.0.1",
    "next": "15.2.4",
    "prisma": "^6.5.0",
    "react": "^19.0.0",
    "react-datepicker": "^8.3.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/node": "^20.17.30",
    "@types/react": "^19",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "fs-extra": "^11.3.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^5.2.6"
  },
  "prisma": {
    "seed": "node ./prisma/seed.cjs"
  }
}
