generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TaskType {
  MANUAL_REVIEW_WORK
  P2_ACTIVITIES
  PROJECT
  LEARNING
  DOCUMENTATION
  OTHERS
}

model Task {
  id          String    @id @default(cuid())
  description String
  type        TaskType
  date        DateTime  @default(now())
  link        String?
  createdAt   DateTime  @default(now())
  tags        TaskTag[]
}

model Tag {
  id    String    @id @default(cuid())
  name  String    @unique
  tasks TaskTag[]
}

model TaskTag {
  taskId String
  tagId  String

  task Task @relation(fields: [taskId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([taskId, tagId])
}
